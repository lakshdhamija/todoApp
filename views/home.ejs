<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <form action="/create-task" class="todo-form" method="POST">
        <!-- Description -->
        <div class="description">
            <p>Enter task</p>
            <input type="text" name="description">
        </div>
        <!-- Category -->
        <div class="category">
            <select name="category">
                <option>Personal</option>
                <option>Work</option>
                <option>School</option>
                <option>Cleaning</option>
                <option>Other</option>
            </select>
        </div>
        <!-- Date -->
        <div class="date">
                <input type="date" name="date">
        </div>
        <input type="submit" value="Submit">
    </form>
    <div class= "list-container">
        <ul class="list">
            <% for(let i of todo_list) { %> 
                <li>
                    <div class="details">
                        <p><%= i.description %></p>
                    </div>
                    <div class="del-btn">
                        <a href="/delete-todo/<%= i._id %>"><i class="far fa-trash-alt"></i></a>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
    <script src="https://kit.fontawesome.com/c18f6677f5.js" crossorigin="anonymous"></script>
</body>
</html>